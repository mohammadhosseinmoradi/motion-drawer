{
  "name": "motion-drawer",
  "version": "0.4.3",
  "description": "A headless drawer with smooth animations, easily integrable with any headless library.",
  "scripts": {
    "typecheck": "tsc --noEmit",
    "build": "pnpm type-check && bunchee",
    "dev": "bunchee --watch",
    "dev-test": "turbo run dev --filter=playground...",
    "format": "prettier --write ."
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    "import": {
      "types": "./dist/index.d.mts",
      "default": "./dist/index.mjs"
    },
    "require": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "keywords": [
    "react",
    "drawer",
    "dialog",
    "modal",
    "motion-drawer"
  ],
  "author": "Mohammad Hossein Moradi <mhmdev64@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/mohammadhosseinmoradi/motion-drawer.git"
  },
  "bugs": {
    "url": "https://github.com/mohammadhosseinmoradi/motion-drawer/issues"
  },
  "devDependencies": {
    "@types/node": "24.4.0",
    "@types/react": "19.1.13",
    "@types/react-dom": "^19.1.9",
    "bunchee": "^6.6.0",
    "eslint": "^9.35.0",
    "prettier": "^3.6.2",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "turbo": "^2.5.6",
    "typescript": "5.9.2",
    "@eslint/eslintrc": "^3.3.1"
  },
  "peerDependencies": {
    "react": "^16.8 || ^17.0 || ^18.0 || ^19.0.0 || ^19.0.0-rc",
    "react-dom": "^16.8 || ^17.0 || ^18.0 || ^19.0.0 || ^19.0.0-rc",
    "motion": "^12"
  },
  "packageManager": "pnpm@10.0.0"
}
